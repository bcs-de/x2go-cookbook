#
# Created by Chef for <%= node.name %>
#

<% @sessions.each do |session| %>
[20130826-<%= session[:name] %>]
name = <%= session[:name] %>
autostart = <%= session[:autostart] || "false" %>
width = 1024
height = 768
layout = de
usekbd = false
fullscreen = <%= session[:fullscreen] || "false" %>
xinerama = <%= session[:xinerama] || "false" %>
multidisp = <%= session[:multidisp] || "false" %>
quality = <%= session[:quality] || "9" %>
pack = <%= session[:pack] || "4k-png-jpeg" %>
speed = <%= session[:speed] || "3" %>
print = <%= session[:print] || "false" %>
<% if session[:export] %>
useexports = true
export <%= session[:export] %>
<% else %>
useexports = false
<% end %>
command = <%= session[:command] %>
<% if session[:command] == 'RDP' %>
directrdp = true
rdpserver = <%= session[:host] %>
host = <%= session[:host] %>
directrdpsettings = <%= session.fetch('rdpoptions', '') %>
<% elsif session[:command] == 'XDMCP' %>
xdmcpserver = <%= session[:host] %>
<% else %>
host = <%= session[:host] %>
<% end %>

<% end %>
